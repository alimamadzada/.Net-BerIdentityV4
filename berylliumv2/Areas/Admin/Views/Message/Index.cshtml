@model List<Message>
<table class="table table-hover">
    <thead>
        <tr>
            <th>SenderName</th>
            <th>SenderEmail</th>
            <th>MessageText</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Message item in Model)
        {
            <tr>
                <td>@item.SenderName</td>
                <td> @item.SenderEmail</td>
                <td> @item.MessageText</td>
                <td>@item.Date</td>
                <td><a href="/admin/message/delete/@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a></td>
            </tr>
        }
    </tbody>
</table>
